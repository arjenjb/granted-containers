{
    "manifest_version": 2,
    "name": "Granted Containers",
    "description": "View multiple AWS accounts and regions in a single browser.",
    "version": "1.0.0",
    "browser_action": {
        "default_icon": "icon-16.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["js/backgroundPage.js"],
        "persistent": false
    },
    "icons": {
        "16": "icon-16.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    },
    "protocol_handlers": [
        {
            "protocol": "ext+granted-containers",
            "name": "Open links in Granted Containers",
            "uriTemplate": "/opener.html#%s"
        }
    ],
    "permissions": [
        "contextualIdentities",
        "cookies",
        "tabs",
        "bookmarks",
        "storage"
    ]
}
